    "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "lib": ["es2015"],
      "moduleResolution": "node",
      "types": ["node"],
      "removeComments": true,
      "outDir": "build"
    },
    "exclude": ["node_modules", "test"]
}